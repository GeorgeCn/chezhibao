{% extends 'admin_layout.html.twig' %}

{% block content %}
    <h1>Config</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ config.id }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ config.company }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{% if config.url %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if config.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('config_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('config_edit', { 'id': config.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
